{
  "name": "@commonalityco/monorepo",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@8.6.1",
  "contributors": [
    "Alec Ortega <alec@commonality.co> (https://github.com/alecortega)"
  ],
  "scripts": {
    "co:open": "pnpm exec commonality open",
    "build": "preconstruct build && turbo run --filter @commonalityco/studio build",
    "clean": "rimraf **/node_modules **/dist **/.turbo **/lib",
    "test": "vitest run --coverage",
    "test:watch": "turbo run test:watch",
    "lint": "manypkg check && preconstruct validate && turbo run lint",
    "link-all": "ts-node scripts/link-all.ts",
    "unlink-all": "ts-node scripts/unlink-all.ts",
    "changeset:create": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "changeset publish",
    "commonality:publish": "commonality publish",
    "prepare": "husky install",
    "type-check": "turbo run type-check",
    "postinstall": "preconstruct dev",
    "conform": "manypkg fix && preconstruct fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@changesets/cli": "^2.26.2",
    "@commonalityco/config-eslint": "*",
    "@commonalityco/config-tsconfig": "*",
    "@manypkg/cli": "^0.21.0",
    "@preconstruct/cli": "^2.8.1",
    "@types/node": "^18.17.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.47.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "execa": "5.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "!packages/config-*"
    ],
    "exports": {
      "importConditionDefaultExport": "default"
    },
    "___experimentalFlags_WILL_CHANGE_IN_PATCH": {
      "importsConditions": true
    }
  }
}
